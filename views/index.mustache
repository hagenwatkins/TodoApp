<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <nav>
      <a href="/">Home Sweet Home</a>
    </nav>


    <form method="post" action="/todos">
      <input type="text" name="description" />
      <button type="submit">Add Todo</button>
    </form>


    <br>

    {{#todos}}
    <form method="post" action="/todos/{{ _id }}/deleted">
      <button type="submit">Delete</button>
    </form>
    <form action="/todos/{{ _id }}/completed" method="post">
      <div>
          {{description}} - {{done}} - {{createdAt}} <button type="submit">Done</button>
      </div>
    </form>

    {{/todos}}



  </body>

</html>
